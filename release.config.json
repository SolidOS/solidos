{
  "defaultBranch": "main",
  "skipIfNoDiff": true,
  "defaultInstall": "npm install",
  "defaultTest": "npm test",
  "defaultBuild": "npm run build",
  "modes": {
    "stable": {
      "branch": "main",
      "versionBump": "patch",
      "npmTag": "latest",
      "gitTag": true,
      "gitPush": true
    },
    "test": {
      "branch": "dev",
      "versionBump": "prerelease",
      "preid": "test",
      "npmTag": "test",
      "gitTag": false,
      "gitPush": false
    }
  },
  "repos": [
    {
      "name": "solid-logic",
      "path": "workspaces/solid-logic",
      "repo": "https://github.com/solid/solid-logic.git",
      "afterInstall": [
        "npm install rdflib@latest solid-namespace@latest"
      ]
    },
    {
      "name": "pane-registry",
      "path": "workspaces/pane-registry",
      "repo": "https://github.com/solid/pane-registry.git",
      "afterInstall": [
        "npm install solid-logic rdflib@latest"
      ]
    },
    {
      "name": "solid-ui",
      "path": "workspaces/solid-ui",
      "repo": "https://github.com/solid/solid-ui.git",
      "afterInstall": [
        "npm install pane-registry solid-logic rdflib@latest solid-namespace@latest"
      ]
    },
    {
