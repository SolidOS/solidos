      "path": "workspaces/activitystreams-pane",
      "repo": "https://github.com/solid/activitystreams-pane.git",
      "afterInstall": [
        "npm install solid-ui pane-registry solid-logic rdflib@latest"
      ]
    },
    {
      "name": "chat-pane",
      "path": "workspaces/chat-pane",
      "repo": "https://github.com/solid/chat-pane.git",
      "afterInstall": [
        "npm install solid-ui solid-logic rdflib@latest"
      ]
    },
    {
      "name": "folder-pane",
      "path": "workspaces/folder-pane",
      "repo": "https://github.com/solid/folder-pane.git",
      "afterInstall": [
        "npm install solid-ui solid-logic rdflib@latest"
      ]
    },
    {
      "name": "issue-pane",
